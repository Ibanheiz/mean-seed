table-color = #1390DD

.table-client
  width 55%;

.table-client
  text-align center
  padding 0
  font-family arial, verdana;

.table-client img
  margin-top 5px

.table-client thead tr
  background table-color
  color #fff
  height 40px
  border 1px solid #ccc
  gradient-linear(table-color, #47A5E0)

.odd-row
  background #fff
  color #333
  height 40px
  transition(all, 0.4s, linear)

.even-row
  @extends .odd-row
  gradient-linear(#eee, #f4f4f4)
  transition(all, 0.4s, linear)

.odd-row:hover,
.even-row:hover
  background #bfdef2
  cursor default
  transition(all, 0.4s, linear)

.table-client tbody td
  border 1px solid #ccc

.button-novo-cliente
  width 130px
  height 45px
  background table-color
  gradient-linear(table-color, #47A5E0)
  font-size rem(20px)
  text-align center
  line-height 45px
  border-radius 4px
  margin-top 20px
  border 1px solid #333
  cursor pointer

.button-novo-cliente a
  color #fff

.empty-message
  width 55%;
  height 45px
  line-height 45px
  text-align center
  border 1px solid #ccc
